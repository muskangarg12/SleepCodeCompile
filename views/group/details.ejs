<!doctype html>
<html lang="en">
<head>

    <% include ../partials/header %>

    <title><%= title %></title>

    <!-- Custom CSS: common.css -->
    <link rel="stylesheet" href="/css/common.css">
    <!-- Custom CSS: group.css -->
    <link rel="stylesheet" href="/css/group.css">

    <!-- Custom JS: common.js -->
    <script src="/js/common.js"></script>

</head>
<body>

<% include ../partials/sidebar %>

<!-- MAIN CHAT PAGE HERE -->
<div id="main">
    <!-- Chats Heading: Group Name -->
    <nav class="orange lighten-1" id="chats-heading" style="margin-bottom: 20px">
        <h3 class="center" id="chat-heading">

            <%= title %>

            <!-- ICON FOR Chat -->
            <a href="/groups/<%= groupId %>/chat" id="chat-icon" class="right">
                <i class="fa fa-commenting-o tooltipped" data-position="left" data-tooltip="back to group"></i>
            </a>
        </h3>
    </nav>

    <div class="container">
        <div class="row">
            <div>
                <table class="striped centered" style="border: 1px solid #d0d0d0;">
                    <thead>
                        <tr>
                            <th>Group Members</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% members.forEach(member => { %>
                        <tr><td>
                            <%= member %>
                        </td></tr>
                    <% }) %>
                    </tbody>
                </table>

                <form class="center-align" action="/groups/<%= groupId %>/leave" method="POST" style="margin-top: 20px" >
                    <button class=" btn">Leave Group</button>
                </form>
            </div>

